<!Doctype html>
<html>
<head>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.3.1.js" integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60=" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="./style.css">
  <script type="text/javascript" src="./jq.js"></script>
  <title>Twitter Clone</title>
</head>
<body class="bg-primary">
  <header>
    <ul class="nav justify-content-center bg-primary">
      <li class="nav-item">
        <img src="https://image.freepik.com/free-icon/twitter-logo_318-40209.jpg" class="sec-log">
      </li>
      <li class="nav-item">
        <form action="mytweets" method="post"><input class="btn-outline-primary text-white" value="My Tweets" type="submit"></form>
      </li>
      <li class="nav-item">
        <form action="alltweets" method="post"><input class="btn-outline-primary text-white" value="All Tweets" type="submit"></form>
      </li>
      <li class="nav-item ">
        <form action="search" method="post"><input class="btn-outline-secondary text-white" value="Search" type="submit"></form>
      </li>
      <li class="nav item">
        <form action="logout" method="post"><input class="btn-outline-secondary text-white" value="Log Out" type="submit"></form>
      </li>
    </ul>
  </header>
  <h4></h4>
  <%for(var i=0; i<data[1].tweets.length; i++){%>
    <div class="card mt-3">
      <div class="card-header">
        <b class="mr-5 username"><%=data[1].username%></b>
      </div>
    <%if(data[1].tweets[i].hasOwnProperty('rtUsername')){%>
      <div class="card-body">
        <p>tweets from <%= data[1].tweets[i].rtUsername %></p>
        <p>"<%= data[1].tweets[i].tweetString %>"</p>
      </div>
    <%}%>
    <div class="card-body">
      <blockquote>
      <p class="str"><%= data[1].tweets[i].str %></p>
      <footer class="bg-white">
        <form class='rL tweetOut'><input type="submit" value="RT" class="btn btn-lg-danger ml-2"><%= data[1].tweets[i].rt %></form>
        <% if(data[1].tweets[i].likes.includes(data[0])){ %>
        <form class='rL Unlike'><input type="submit" value="Unlike" class="btn btn-lg-danger ml-2 bg-primary"><%= data[1].tweets[i].likes.length %></form>
        <%}else{%>
          <form class='rL like'><input type="submit" value="Like" class="btn btn-lg-danger ml-2" ><%= data[1].tweets[i].likes.length %></form>
        <%}%>
        <textarea class="form-control reTWEET reTWEET2"></textarea>
        <button class="btn btn-lg-danger ml-2 reTWEET reTWEET1">Submit</button>
      </footer>
      </blockquote>
    </div>
 </div>
  <%}%>
 </div>
</body>
</html>
